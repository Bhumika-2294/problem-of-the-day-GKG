class Solution {
  public:
    vector<int> findTwoElement(vector<int>& arr) {
        int n = arr.size();
        int repeating = -1;

        // Mark visited indices by negating the value at that index
        for (int i = 0; i < n; i++) {
            int val = abs(arr[i]);

            if (arr[val - 1] > 0) {
                arr[val - 1] = -arr[val - 1];
            } else {
                // Found the repeating element
                repeating = val;
            }
        }

        int missing = -1;

        // The index with a positive value is the missing number
        for (int i = 0; i < n; i++) {
            if (arr[i] > 0) {
                missing = i + 1;
                break;
            }
        }

        return {repeating, missing};
    }
};
